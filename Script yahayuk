------------------------------------------------
-- LOGIC
------------------------------------------------
local route = {
	{pos = Vector3.new(625.49, 1799.61, 3432.60), wait = 10},
	{pos = Vector3.new(728.53, 2196.00, 3972.69), wait = 10},
	{pos = Vector3.new(113.16, 2432.51, 3483.40), wait = 10},
}

local looping, paused, count, currentIndex, remainingTime = false, false, 0, 1, 0

local function setStatusText(txt, color)
	status.Text = txt
	if color then status.TextColor3 = color end
end

local function teleportLoop()
	if looping then return end
	looping = true
	setStatusText("Status: üü¢ RUNNING", Color3.fromRGB(0,255,140))

	task.spawn(function()
		task.wait(0.1)
		while looping do
			local step = route[currentIndex]
			if not step then
				currentIndex = 1
				step = route[1]
			end

			if remainingTime <= 0 then
				remainingTime = step.wait
			end

			while remainingTime > 0 do
				if not looping then break end
				timerLabel.Text = string.format("Timer: %.1fs", remainingTime)
				task.wait(0.1)
				if not paused then
					remainingTime -= 0.1
				end
			end

			if looping and not paused then
				local root = getRoot()
				if root then root.CFrame = CFrame.new(step.pos) end
				setStatusText("Teleport #" .. currentIndex .. " ‚úÖ", Color3.fromRGB(0,255,140))
				task.wait(0.5)
				currentIndex += 1
				remainingTime = 0
				if currentIndex > #route then
					currentIndex = 1
					count += 1
					countLabel.Text = "Total Menang: " .. tostring(count)
				end
			else
				setStatusText("‚è∏Ô∏è PAUSED", Color3.fromRGB(255,220,100))
				task.wait(0.1)
			end
		end
		setStatusText("Status: üî¥ OFF", Color3.fromRGB(255,120,120))
	end)
end

startBtn.MouseButton1Click:Connect(function()
	if not looping then
		teleportLoop()
	else
		paused = false
		setStatusText("Status: üü¢ RUNNING", Color3.fromRGB(0,255,140))
	end
end)

stopBtn.MouseButton1Click:Connect(function()
	if looping then
		paused = true
		setStatusText("‚è∏Ô∏è PAUSED", Color3.fromRGB(255,220,100))
	end
end)

-- hide / show GUI (Shift + M)
local visible = true
UserInputService.InputBegan:Connect(function(input, processed)
	if processed then return end
	if input.KeyCode == Enum.KeyCode.M and UserInputService:IsKeyDown(Enum.KeyCode.LeftShift) then
		visible = not visible
		panel.Visible = visible
	end
end)
